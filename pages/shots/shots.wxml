<view>

    <view wx:if="{{hidden == false}}"> 
      <include src="../../components/loading.wxml" /> 
    </view>

    <view class="card" wx:for="{{items}}">
      <view data-publish-time="{{item.time}}" bindtap="onItemClick">
      <video id="myVideo" class="image" src="{{item.video}}" controls objectFit="fill" poster="{{item.image}}"></video>
      <text class="time">{{item.name}}</text>
      <view class="title">{{item.description}}</view>
      </view>
    </view>
</view>
